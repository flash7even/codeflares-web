<head>
	<link rel="stylesheet" type="text/css" href="/css/main.css">
</head>



<div class="show-contest">
    <div class="table-type-1">
        <div class="table-title-2">
		    <h2 style="text-align: center; color: #997c2e;"><b>Contest Title: {{contest_name}} [Level {{contest_level}}]</b></h2>
		    <h5 style="text-align: center; color: #5bc0de;"><b>Setter: {{setter_handle}}</b></h5>
		    <h6 style="text-align: center; color: #000000;"><b>Time: {{start_date}} - {{end_date}} </b></h6>
        </div>
        <table id="problemListTable" class="table table-striped table-bordered">
            <thead style="background-color: #8FC1E3;">
                <tr>
                    <th>Problem Name</th>
                    <th>Source Link</th>
                    <th>Problem ID</th>
                    <th>OJ Name</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>


<script type="text/javascript">

    function getProblemList(){
        var data_list = [];
        {{#each problem_set}}
            var prbolem_link = '<a href = "/problem/view/{{id}}/" style="color: #058876; font-weight:500; text-decoration: underline;">{{problem_name}}</a>'
            var source_link = '<a href = {{source_link}} style="color: #058876; font-weight:500; text-decoration: underline;"><i class="fas fa-link"></i></a>'
            var data = [prbolem_link, source_link, "{{problem_id}}", "{{oj_name}}"];
            data_list.push(data)
        {{/each}}
        return data_list;
    }

    function showProblemsDTSearchTable(){
        var dt_list = getProblemList();
        
        $("#problemListTable").dataTable({
            "aaData": dt_list,
            paging: false,
            searching: false,
            ordering: false,
            destroy: true,
            scrollCollapse: true,
            responsive: true,
            pageLength: 10,
            lengthMenu: [[3, 5, 10, -1], [3, 5, 10, 20]]
        });
    }

    $(document).ready( function () {
        showProblemsDTSearchTable();
    } );

</script>
