<head>
	<link rel="stylesheet" type="text/css" href="/css/main.css">
</head>


<div class="form-type-1">	
    <form action="/classroom/task/add/{{id}}/" method="post">
        <div class="table-title-2">
            <h2 style="text-align: center;"><b>Add New Task</b></h2>
			<h6 style="text-align: center; color: #0e586e;"><b>Classroom: {{team_name}}</b></h6>
        </div>
		<br>
		<div class="form-row">
			<div class="form-group col-md-12">
				<div class="input-group">
					<input type="text" id="task_title" class="form-control" name="task_title" placeholder="Task Name" required>
				</div>
			</div>
		</div>
		<div class="form-row">
			<div class="form-group col-md-12">
				<div class="input-group">
					<input type="text" id="task_description" class="form-control" name="task_description" placeholder="Task Details">
				</div>
			</div>
		</div>
		<div class="form-row">
			<div class="form-group col-md-12">
				<div class="input-group">
					<input type="date" title="Deadline" id="deadline" class="form-control" name="deadline" placeholder="Deadline">
				</div>
			</div>
		</div>
		<div class="form-group">
            <button type="submit" class="btn submit-btn btn-primary btn-block btn-lg">Submit</button>
        </div>
	</form>
</div>
