<head>
	<link rel="stylesheet" type="text/css" href="/css/main.css">
	<link rel="stylesheet" type="text/css" href="/css/individual_training.css">
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
</head>


<div class="cfs-table-wrapper-1" style="width: 100%%;  margin-right:1px auto">
    <div class="cfs-title-1">
        <h5 style="text-align: center;"><b><a href = "/classroom/training/{{id}}/contest/" style="color: #3d87b9; font-weight:700;">{{team_name}}</a> - Task List</b></h5>
    </div>
    {{#if task_list}}
    <table class="table">
        <thead>
            <tr>
                <th style="width: 15%;">Task Name</th>
                <th style="width: 30%;">Details</th>
                <th>Added by</th>
                <th>Deadline</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each task_list}}
            <tr>
                <td>{{task_title}}</td>
                <td>{{task_description}}</td>
                <td><a href = "/profile/{{task_added_by_user_handle}}/" style="color: {{task_added_by_user_skill_color}}; font-weight:700;">{{task_added_by_user_handle}}</a></td>
                <td>{{deadline}}</td>
                <td>
                    <a href="/classroom/task/update/{{id}}/" title="Update" data-toggle="tooltip" style="color: #5bc0de;"><i class="fas fa-edit"></i></a>
                    <a href="/classroom/task/delete/{{id}}/" title="Delete" data-toggle="tooltip" style="color: rgb(180, 88, 1);"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
                {{/each}}
        </tbody>
    </table>
    {{else}}
        <h6 style="text-align: center; padding: 20px;">No task has been added yet.</h6>
    {{/if}}
</div>