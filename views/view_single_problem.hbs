                paging: false,
                searching: false,
                info: true,
                ordering: false,
                destroy: true,
                scrollCollapse: true,
                responsive: true,
                pageLength: 10,
                lengthMenu: [[10, 20, 50, -1], [10, 20, 50, 100]]
