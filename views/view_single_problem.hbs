        function getResourceList(){
            console.log("getResourceList")
            var dt_list = [];
            {{#each resource_list}}
                var resource_writer = '<a href = "/profile/{{resource_writer_handle}}/" style="color: {{resource_writer_skill_color}}; font-weight:700;">{{resource_writer_handle}}</a>'
