                var data = ["{{resource_title}}", resource_body, resource_writer, "{{resource_owner}}", "{{updated_at}}", resource_link];
                dt_list.push(data)
            {{/each}}

            return dt_list;
        }

        function showResourcesDTSearchTable(){
            var dt_list = getResourceList();
            console.log('dt_list: ')
            console.log(dt_list)
            
            $("#resourceListTable").dataTable({
