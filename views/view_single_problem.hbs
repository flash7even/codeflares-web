                        submisson_stat += ', '
                    }
                    submisson_stat += `<a href = "{{submission_link}}" style="color: #3d87b9; font-weight:500; text-decoration: underline;">Code Link</a>`
                    cnt += 1
                {{/each}}
                var data = ["{{order}}", user_link, 'SOLVED', submisson_stat];
                dt_list.push(data)
            {{/each}}
            return dt_list;
        }

        function getSubmissionList(submission_data){
            console.log('getSubmissionList called')
            console.log(submission_data)
            var sub_list = submission_data.submission_history
            var dt_list = [];
            var idx = 0
            for(idx = 0;idx<sub_list.length;idx++){
                var user_handle = sub_list[idx].user_handle
                var user_skill_color = sub_list[idx].user_skill_color
                var order = sub_list[idx].order
                var user_link = `<a href = "/profile/${user_handle}/" style="color: ${user_skill_color}; font-weight:500; text-decoration: underline;"><b>${user_handle}</b></a>`
                var submisson_stat = ''
                var cnt = 0;
                for(cnt = 0;cnt<sub_list[idx].submission_list.length;cnt++){
                    if (cnt>0) {
                        submisson_stat += ', '
                    }
                    var submission_link = sub_list[idx].submission_list[cnt].submission_link
                    submisson_stat += `<a href = "${submission_link}" style="color: #3d87b9; font-weight:500; text-decoration: underline;">Code Link</a>`
                    cnt += 1
                }
                var data = [order, user_link, 'SOLVED', submisson_stat];
                dt_list.push(data)
            }
            return dt_list;
        }

