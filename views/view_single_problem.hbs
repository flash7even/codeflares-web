<head>
	<link rel="stylesheet" type="text/css" href="/css/main.css">
</head>

<div class="profile-wrapper-1" style="width: 100%;  margin-right:1px auto;">
    <div class="cfs-title-1">
        <div class="row cfs-title-1-inside">
            {{#if problem-page}}
            <div class="selected-button">
            <a style="color: #0f2436;" href="/problem/view/{{id}}/" class="btn btn-sm" role="button"><b>{{id}}</b></a>
            </div>
            {{else}}
            <a style="color: #0f2436;" href="/problem/view/{{id}}/" class="btn btn-sm" role="button"><b>{{id}}</b></a>
            {{/if}}
            {{#if submission-page}}
            <div class="selected-button">
            <a style="color: #0f2436;" href="/problem/submission/history/{{id}}/" class="btn btn-sm" role="button"><b>Submissions</b></a>
            </div>
            {{else}}
            <a style="color: #0f2436;" href="/problem/submission/history/{{id}}/" class="btn btn-sm" role="button"><b>Submissions</b></a>
            {{/if}}

            {{#if resource-page}}
            <div class="selected-button">
            <a style="color: #0f2436;" href="/problem/resource/history/{{id}}/" class="btn btn-sm" role="button"><b>Resources</b></a>
            </div>
            {{else}}
            <a style="color: #0f2436;" href="/problem/resource/history/{{id}}/" class="btn btn-sm" role="button"><b>Resources</b></a>
            {{/if}}
        </div>
    </div>

	{{#if problem-page}}
	<div style="padding: 30px; padding-left: 50px;">
    <div class="row">
        <div class="col-md-11">
            <div class="post-header">
                <h4 style="color: rgb(23, 81, 104);" class="media-heading">
                    Problem: <b>{{problem_name}}</b>
                    <span style="color: #3d87b9; padding: 10px;"><a href="{{source_link}}"><i class="fas fa-external-link-alt"></i></a></span>
                </h4>
                <br>
                {{#if session.user_id}}
                    {{#if SOLVED}}
                    <h6><i style="color:#3d87b9; width: 30px;" class="fas fa-angle-double-right"></i>User Status: <span style="color: rgb(9, 148, 44); font-weight: 500;">Solved</span></h6>
                    {{else}}
                    <h6><i style="color:#3d87b9; width: 30px;" class="fas fa-angle-double-right"></i>User Status: <span style="color: rgb(145, 46, 0); font-weight: 500;">Unsolved</span></h6>
                    {{/if}}
                {{/if}}
                <h6><i style="color:#3d87b9; width: 30px;" class="fas fa-angle-double-right"></i>Problem Difficulty: <span style="font-weight: 500;">{{problem_difficulty}}</span></h6>
                <h6><i style="color:#3d87b9; width: 30px;" class="fas fa-angle-double-right"></i>Online Judge: <span style="font-weight: 500;">{{oj_name}}</span></h6>
                <h6><i style="color:#3d87b9; width: 30px;" class="fas fa-angle-double-right"></i>Problem ID: <span style="font-weight: 500;">{{problem_id}}</span></h6>
                <h6><i style="color:#3d87b9; width: 30px;" class="fas fa-angle-double-right"></i>Active Status: <span style="font-weight: 500;">{{active_status}}</span></h6>
                <a href="/problem/submission/history/{{id}}/" style="color:#3d87b9;"><h6><i style="width: 30px;" class="fas fa-angle-double-right"></i>User Solved: <span style="color: rgb(13, 98, 155); font-weight: 500;">{{solve_count}}</span></h6></a>
            </div>
        </div>
    </div>
    <br>
    <div class="row post-foter">
        <div class="col-md-10">
        </div>
        <div class="col-md-2">
            <a href="/vote/problem/like/{{id}}/"><span style="padding-right: 20px; color: rgb(31, 192, 57);"><i class="fas fa-thumbs-up"></i> {{vote_count.like_count}}</span></a>
            <a href="/vote/problem/dislike/{{id}}/"><span style="padding-right: 20px; color: rgb(209, 84, 0);"><i class="fas fa-thumbs-down"></i> {{vote_count.dislike_count}}</span></a>
            <a href="#comments"><span style="color: rgb(19, 87, 104);"><i class="fas fa-comment"></i> {{comment_count}}</span></a>
        </div>
    </div>
	</div>
	{{/if}}

	{{#if submission-page}}	
        <div class="cfs-title-2" style="margin-top: 30px;">
            <h5 style="text-align: center;"><b>Problem Submission History</b></h5>
        </div>
        <div class="cfs-table-1" style="margin: 15px;">
            <table class="table cfs-table-data" id="problemSubmissionListTable" style="text-align: center;">
                <thead style="background-color: rgb(255, 255, 255);">
                    <tr>
                        <td>#</th>
                        <td style="width: 30%;">User Handle</td>
                        <td>Status</th>
                        <td>Submission Link</td>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
	{{/if}}

	{{#if resource-page}}
    <div class="cfs-title-2" style="margin-top: 30px;">
        <div class="row">
            <div class="col-md-2">
            </div>
            <div class="col-md-8" style="padding-top: 3px;">
                <h5 style="text-align: center;"><b>Problem Resources</b></h5>
            </div>
            {{#if session.user_id}}
            <div class="col-md-2" style="float: right;">
                <a title="Add new post" class="btn btn-sm btn-light" role="button" type="button" style="border-color: #9fb6c5;"  data-toggle="modal" data-target="#addResourceModal"> <span style="color: #aab4bb;"><i class="fas fa-plus"></i></span> Add Resource</a>
            </div>
            {{/if}}
        </div>
    </div>
    <div class="cfs-table-1" style="margin: 15px;">
        <table class="resourceTable table cfs-table-data table-bordered" id="resourceListTable">
            <thead>
                <tr>
                    <td>Title</td>
                    <td>Description</td>
                    <td>Credit</td>
                    <td>Author</td>
                    <td>Date</td>
                    <td>Source</td>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
	{{/if}}

</div>


{{#if problem-page}}
<div class="cfs-table-wrapper-1" style="margin-top: 10px;">
    <div class="cfs-title-1" style="background-color: #ebebeb;">
        <h5 style="text-align: center;"><b>Discussions</b></h5>
    </div>
    {{#if session.user_id}}
    <div class="comment-post-1">	
        <form action="/problem/comment/{{id}}/" method="post">
            <div class="form-row">
                <div class="form-group col-md-12">
                    <div class="input-group">
                        <textarea type="text" class="form-control" name="comment_text" placeholder="Write a response . . ."></textarea>
                    </div>
                </div>
            </div>
            <div class="form-group comment-btn col-sm-2" style="left: 84%; height:15px;">
                <button type="submit" class="btn btn-sm submit-btn btn-block">Comment</button>
            </div>
        </form>
    </div>
    {{/if}}
    <div class="row" style="margin: 5px;">
        <div class="col-12">
            <div class="comments" id = "comments">
            </div>
        </div>
    </div>
</div>
{{/if}}

<!-- Modal Section Starts-->

<div class="modal fade" id="addResourceModal" tabindex="-1" role="dialog" aria-labelledby="addResourceModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header text-center">
            <h5 class="modal-title w-100 font-weight-bold">Add Resource</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <form action="/problem/resource/add/{{id}}/" method="post" style="padding: 10px;">
            <div class="form-row">
                <div class="form-group col-md-12">
				    <label><b>Resource Name<span style="color: brown; font-size: 12px;"><sup>*</sup></span></b></label>
                    <div class="input-group">
                        <input type="text" id="resource_title" class="form-control" name="resource_title" placeholder="Enter the resource name" required>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-12">
				    <label><b>Resource Body</b></label>
                    <div class="input-group">
                        <textarea type="text" id="resource_body" class="form-control blog-post-text-box" name="resource_body" placeholder="Write a short description or some details about the resource"></textarea>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-12">
				    <label><b>Resource Type</b></label>
                    <div class="input-group">
                        <input type="text" title="resource_type" id="resource_type" class="form-control" name="resource_type" placeholder="Enter the resource type.">
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-12">
				    <label><b>Resource Credit</b></label>
                    <div class="input-group">
                        <input type="text" title="resource_owner" id="resource_owner" class="form-control" name="resource_owner" placeholder="Enter the name of the owner or author">
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-12">
				    <label><b>Resource Link</b></label>
                    <div class="input-group">
                        <input type="text" id="resource_link" class="form-control" name="resource_link" placeholder="Provide any link if available">
                    </div>
                </div>
            </div>
            <div class="form-group submit-btn-div">
                <button type="submit" class="btn submit-btn btn-info btn-block btn">Add Resource</button>
            </div>
        </form>
    </div>
  </div>
</div>

<!-- Modal Section Ends-->

