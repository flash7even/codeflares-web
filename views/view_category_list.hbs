<head>
	<link rel="stylesheet" type="text/css" href="/css/main.css">
</head>

<div class="show-category">
    <div class="form-type-1" style="width: 100%;">
       <form name="form form-type-1" action="/category/list/" method="POST">
            <h4 style="text-align: center;">Category Search Parameter</h4>
            <br>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <div class="input-group">
                        <input type="text" id="category_root" class="form-control autocomplete-root" name="category_root" placeholder="Root Category">
                    </div>
                </div>
                <div class="form-group col-md-3">
                    <div class="input-group">
                        <input type="text" id="minimum_difficulty" class="form-control" name="minimum_difficulty" placeholder="Minimum Difficulty">
                    </div>
                </div>
                <div class="form-group col-md-3">
                    <div class="input-group">
                        <input type="text" id="maximum_difficulty" class="form-control" name="maximum_difficulty" placeholder="Maximum Difficulty">
                    </div>
                </div>
                <div class="form-group col-md-2">
                    <button type="submit" class="btn submit-btn btn-info btn-block btn-lg">Submit</button>
                </div>
            </div>
        </form>
     </div>

    <div class="table-type-1">
        <table id="categoryListTable" class="table table-striped table-bordered table-type-1-table">
            <thead>
                <tr>
                    <th>Root Category</th>
                    <th>Category Name</th>
                    <th>Category Difficulty</th>
                    <th>Problem Count</th>
                </tr>
            </thead>
            <tbody>

            </tbody>
        </table>
    </div>
</div>


<script type="text/javascript">

    function getCategoryList(){
        var categorys = [
            ['Data Structure', 'Data Structure', '5'],
            ['Data Structure', 'Segment Tree', '8.5'],
            ['Data Structure', 'Segment Tree', '8.5'],
            ['DP', 'Bit Mask', '7.5'],
            ['DP', 'LCA', '6.5']
        ]

        var db_category_list = [];

        {{#each category_list}}
            console.log("{{category_name}}")
            var category_root = "{{category_root}}";
            var category_name = "{{category_name}}";
            var category_data = ["<a href = >"+category_root+"</a>", "<a href = >"+category_name+"</a>", "{{category_difficulty}}", "{{problem_count}}"];
            db_category_list.push(category_data)
        {{/each}}

        return db_category_list;
    }

    function showCategorysDTSearchTable(){
        var dt_list = getCategoryList();
        
        $("#categoryListTable").dataTable({
            "aaData": dt_list,
            paging: true,
            destroy: true,
            scrollY: '500px',
            scrollCollapse: true
        });
    }
	var cat_item = 1;

	function enableAutoCompleteRoot(){
		$(".autocomplete-root").typeahead({
			// data source
			source: rootAlgorithms,

			// how many items to show
			items: 8,

			// default template
			menu: '<ul class="typeahead dropdown-menu" role="listbox"></ul>',
			item: '<li><a class="dropdown-item" href="#" role="option"></a></li>',
			headerHtml: '<li class="dropdown-header"></li>',
			headerDivider: '<li class="divider" role="separator"></li>',
			
			itemContentSelector:'a',

			// min length to trigger the suggestion list
			minLength: 1,

			// number of pixels the scrollable parent container scrolled down
			scrollHeight: 0,

			// auto selects the first item
			autoSelect: true,

			// callbacks
			afterSelect: $.noop,
			afterEmptySelect: $.noop,

			// adds an item to the end of the list
			addItem: false,

			// delay between lookups
			delay: 0,
		});
	}

	const rootAlgorithms = [
		{"name": "Data Structure", "code": "AF"},
		{"name": "Dynamic Programming", "code": "AX"},
		{"name": "Graph", "code": "AL"},
		{"name": "Geometry", "code": "DZ"},
		{"name": "Mathemetics", "code": "AS"},
		{"name": "String Matching", "code": "AD"},
		{"name": "STL", "code": "AO"},
		{"name": "Greedy", "code": "AO"},
		// more data here
	]

    $(document).ready( function () {
	    enableAutoCompleteRoot();
        showCategorysDTSearchTable();
    } );

</script>