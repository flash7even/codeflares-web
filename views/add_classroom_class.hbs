<head>
	<link rel="stylesheet" type="text/css" href="/css/main.css">
</head>

<div class="form-type-1">	
    <form action="/classroom/class/add/{{id}}/" method="post">
        <div class="table-title-2">
            <h2 style="text-align: center;"><b>Add New Class Schedule</b></h2>
			<h6 style="text-align: center; color: #0e586e;"><b>Classroom: {{team_name}}</b></h6>
        </div>
		<br>
		<div class="form-row">
			<div class="form-group col-md-12">
				<div class="input-group">
					<input type="text" id="class_title" class="form-control" name="class_title" placeholder="Class Name" required>
				</div>
			</div>
		</div>
		<div class="form-row">
			<div class="form-group col-md-12">
				<div class="input-group">
					<input type="text" id="class_description" class="form-control" name="class_description" placeholder="Details">
				</div>
			</div>
		</div>
		<div class="form-row">
			<div class="form-group col-md-12">
				<div class="input-group">
					<input type="date" title="Class Time" id="class_time" class="form-control" name="class_time">
				</div>
			</div>
		</div>
		<div class="form-row">
			<div class="form-group col-md-12">
				<div class="input-group">
					<input type="text" title="Duration" id="class_duration" class="form-control" name="class_duration" placeholder="Duration"> <p> Hours</p>
				</div>
			</div>
		</div>
		<div class="form-row">
			<div class="form-group col-md-12">
				<div class="input-group">
					<input type="text" id="resource_link" class="form-control" name="resource_link" placeholder="Resources">
				</div>
			</div>
		</div>
		<div class="form-group">
            <button type="submit" class="btn submit-btn btn-primary btn-block btn-lg">Add Class</button>
        </div>
	</form>
</div>
