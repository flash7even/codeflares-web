<head>
	<link rel="stylesheet" type="text/css" href="/css/main.css">
</head>

<div class="form-type-1">	
    <form action="/blog/post/add/" method="post">
		<h2>Add Blog Post</h2>
		<div class="form-row">
			<div class="form-group col-md-12">
				<div class="input-group">
					<input type="text" autocomplete="off" id="blog_title" class="form-control" name="blog_title" placeholder="Enter Blog Title">
				</div>
			</div>
		</div>
		<div class="form-row">
			<div class="form-group col-md-12">
				<div class="input-group">
					<select class="form-control" id="blog_topic" name="blog_topic">
						<option value="blog_topic">Blog Topic</option>
						<option value="topic_learning">Topic Learning</option>
						<option value="system_post">System Post</option>
					</select>
				</div>
			</div>
		</div>
		<div class="form-row">
			<div class="form-group col-md-12">
				<div class="input-group">
					<textarea type="text" id="blog_text" class="form-control" name="blog_text" placeholder="Write your blog"></textarea>
				</div>
			</div>
		</div>
		<div class="form-group">
            <button type="submit" class="btn submit-btn btn-primary btn-block btn-lg">Submit</button>
        </div>
	</form>
</div>