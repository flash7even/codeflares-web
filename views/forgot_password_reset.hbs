<head>
	<link rel="stylesheet" type="text/css" href="/css/signup.css">
</head>

<div class="signup-form" style="top: 500px;">
    <form action="/confirm/forgot/password/{{user_id}}/{{token}}" method="post">
		<h4 style="text-align: center;">Reset Your Password</h4>
		<br>
		<div class="form-group">
			<div class="input-group">
				<span style="padding-right: 10px;" class="input-group-addon"><i class="fa fa-lock"></i></span>
				<input type="text" class="form-control" name="password" placeholder="Password" required="required">
			</div>
        </div>
		<div class="form-group">
			<div class="input-group">
				<span style="padding-right: 10px;" class="input-group-addon">
					<i class="fa fa-lock"></i>
					<i class="fa fa-check"></i>
				</span>
				<input type="text" class="form-control" name="confirm_password" placeholder="Confirm Password" required="required">
			</div>
        </div>
		<div class="form-group">
            <button type="submit" class="btn btn-primary btn-block btn-lg">Confirm</button>
        </div>
    </form>
</div>