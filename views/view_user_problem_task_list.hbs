<head>
	<link rel="stylesheet" type="text/css" href="/css/main.css">
	<link rel="stylesheet" type="text/css" href="/css/individual_training.css">
</head>

<div class="table-wrapper-2" style="width: 100%%;  margin-right:1px auto">		
        <div class="table-title">
            <h4 style="text-align: center;"><b>Flagged Problems</b></h4>
        </div>
        <table class="table table-striped table-bordered" style="text-align: center;">
            <thead style="background-color: rgb(255, 255, 255);">
                <tr>
                    <th style="width: 30%;">Problem Name</th>
                    <th>OJ Name</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>

                {{#each problem_list}}
                <tr>
                    <td><a href = {{source_link}} style="color: #058876; font-weight:500; text-decoration: underline;">{{problem_name}}</a></td>
                    <td>{{oj_name}}</td>
                    <td style="color: #fc4700;">{{user_status_title}}</td>
                    <td>
                        <a style="color: rgb(52, 180, 212);" href="/problem/user/status/clear/{{id}}/" class="update" title="Remove from flagged list" data-toggle="tooltip"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
                 {{/each}}

            </tbody>
        </table>
</div>