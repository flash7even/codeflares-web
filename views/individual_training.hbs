<head>
	<link rel="stylesheet" type="text/css" href="/css/main.css">
</head>

<div class="cfs-transparent-header-div" style="text-align: center;">
    <div class="cfs-title-light">
        <h4 class="media-heading"><b>Individual Training Model <span>#</span> <span style="color: {{user_details.skill_color}};"><a href = "/profile/{{user_details.username}}/">{{user_details.username}}</a></span></b></h4>
    </div>
    <hr class="light">
    <div  class="row">
        <div class="col-md-2">
        </div>
        <div class="col-md-2">
            <h6><span style="color: #2b3a47;">User Rating</span></h6>
            <hr style="color: #2b3a47; width: 90%;">
            <h6 style="font-size: 25px;"><span style="color: #2b3a47;">{{user_details.skill_value}}</span></h6>
        </div>
        <div class="col-md-2">
            <h6><span style="color: #2b3a47;">Solve Count</span></h6>
            <hr style="color: #2b3a47; width: 90%;">
            <h6 style="font-size: 25px;"><span style="color: #2b3a47;">{{user_details.solve_count}}</span></h6>
        </div>
        <div class="col-md-2">
            <h6><span style="color: #2b3a47;">Score Earned</span></h6>
            <hr style="color: #2b3a47; width: 90%;">
            <h6 style="font-size: 25px;"><span style="color: #2b3a47;">{{user_details.total_score}}</span></h6>
        </div>
        <div class="col-md-2">
            <h6><span style="color: #2b3a47;">Target Score</span></h6>
            <hr style="color: #2b3a47; width: 90%;">
            <h6 style="font-size: 25px;"><span style="color: #2b3a47;">{{user_details.next_week_target}}</span></h6>
        </div>
        <div class="col-md-2">
        </div>
    </div>

    <hr class="light">

    <div class="row page-box">
        <div class="col-md-4">
        </div>
        <div class="col-md-2">
            {{#if training-plan}}
            <b>
            <a title="Home" href="/training/individual/{{user_details.username}}/training-plan/"><i class="fas fa-tenge"></i> Training Plan</a>
            <hr style="border: 1px solid #2b3847; border-radius: 1px;">
            </b>
            {{else}}
            <b>
            <a title="Home" href="/training/individual/{{user_details.username}}/training-plan/"><i class="fas fa-tenge"></i> Training Plan</a>
            <hr style="border: 1px solid #c5c5c5; border-radius: 1px;">
            </b>
            {{/if}}
        </div>
        <div class="col-md-2">
            {{#if category-skill}}
            <b>
            <a title="Member Skills" href="/training/individual/{{user_details.username}}/category-skill/"><i class="fas fa-chart-bar"></i> Category Skills</a>
            <hr style="border: 1px solid #2b3847; border-radius: 1px;">
            </b>
            {{else}}
            <b>
            <a title="Member Skills" href="/training/individual/{{user_details.username}}/category-skill/"><i class="fas fa-chart-bar"></i> Category Skills</a>
            <hr style="border: 1px solid #c5c5c5; border-radius: 1px;">
            </b>
            {{/if}}
        </div>
        <div class="col-md-4">
        </div>
    </div>

</div>

{{#if training-plan}}
    <div class="cfs-table-1" style="width: 100%%; font-weight:500; margin-right:1px auto">			
        <div class="cfs-title-1">
            <h6 style="text-align: center;">Next Problems To Solve</h6>
        </div>
        <table class="table" style="text-align: center;">
            <thead>
                <tr>
                    <td style="width: 5%;"><b>#</b></td>
                    <td><b>Problem Name</b></td>
                    <td><b>Source</b></td>
                    <td><b>Relevant Score</b></td>
                    <td style="width: 10%;"><b>Action</b></td>
                </tr>
            </thead>
            <tbody>
                {{#each problem_stat}}
                <tr>
                    <td style="color: #2b3a47; font-weight: 500px;">{{rank}}</td>
                    <td><a href = "/problem/view/{{problem_info.id}}/" style="color: #0061a1; font-weight:500; text-decoration: underline;">{{problem_info.problem_name}}</a></td>
                    <td><a style="color: #3d87b9;" href="{{problem_info.source_link}}"><i class="fas fa-external-link-alt"></i></a></td>
                    <td>{{relevant_score}}</td>
                    <td>
                        <a style="color: rgb(155, 134, 18);" href="/problem/user/status/flag/{{problem_id}}/" class="edit" title="Flag for 3 days" data-toggle="tooltip"><i class="fas fa-eye-slash"></i></a>
                        <a style="color: rgb(180, 88, 1);" href="/problem/user/status/remove/{{problem_id}}/" class="delete" title="Remove from my list" data-toggle="tooltip"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
                 {{/each}}

            </tbody>
        </table>
    </div>

    <div class="cfs-table-1" style="width: 100%%;  margin-right:1px auto">
        <div class="cfs-title-1">
            <h6 style="text-align: center;">Next Algorithms To Learn</h6>
        </div>
        <table class="table" style="text-align: center; width: 100%; table-layout: fixed;">
            <thead>
                <tr>
                    <td style="width: 5%;"><b>#</b></td>
                    <td><b>Algorithm Name</b></td>
                    <td><b>Algorithm Skill</b></td>
                    <td><b>Difficulty</b></td>
                    <td style="width: 10%;"><b>Relevant Score</b></td>
                </tr>
            </thead>
            <tbody>

                {{#each category_stat}}
                <tr>
                    <td style="color: #2b3a47; font-weight: 500px;">{{rank}}</td>
                    <td style=""><a href = "/category/view/{{category_info.category_id}}/" style="color: #0061a1; font-weight:500; text-decoration: underline;">{{category_info.category_title}}</a></td>
                    <td>{{skill_value}}</td>
                    <td>{{category_info.category_difficulty}}</td>
                    <td>{{relevant_score}}</td>
                </tr>
                 {{/each}}

            </tbody>
        </table>
    </div>
{{/if}}

{{#if category-skill}}
<div class="cfs-table-1">
    <div class="cfs-title-1">
        <h6 style="text-align: center;">Topic Wise Skill</h6>
    </div>
    <br>
    <br>
    <div style="padding: 10px;">
        <div id="skillComparisonChart" style="height: 400px; width:100%"></div>
    </div>
</div>

<div class="cfs-table-1">
    <div class="cfs-title-1">
        <h6 style="text-align: center;">Topic Wise Solved Count</h6>
    </div>
    <br>
    <br>
    <div style="padding: 10px;">
    <div id="solveCountComparisonChart" style="height: 400px; width:100%"></div>
    </div>
</div>

<div class="cfs-table-1" id="overallAlgorithmSkill">
    <div class="cfs-title-1">
        <h6 style="text-align: center;">Overall Algorithm Skills</h6>
    </div>
    <div style="padding: 10px;">
    <table id="categorySkillListTable" class="table category-list-table" style="text-align: center;">
        <thead>
            <tr>
                <th style="width: 13%;">Algorithm Root</th>
                <th>Algorithm Name</th>
                <th>Algorithm Difficulty</th>
                <th>Skill Value</th>
                <th>Skill Title</th>
                <th>Solve Count</th>
            </tr>
        </thead>
        <tbody>

        </tbody>
    </table>
    </div>
</div>

{{/if}}

<script type="text/javascript">
    function tableClassHack() {
        var className = 'google-visualization-table-table';
        $('.'+className).removeClass(className);
    }

    function getCategorySkillList(){
        var db_category_list = [];

        {{#each category_skill_list}}
            var category_root_link = '<span style="color: #0061a1; font-weight:500;">{{category_info.category_root_title}}</span>'
            var category_link = '<a href = "/category/view/{{category_info.category_id}}/" style="color: #0061a1; font-weight:500; text-decoration: underline;">{{category_info.category_title}}</a>'
            var skill_value = parseFloat("{{skill_value}}")
            skill_value = skill_value.toFixed(2)
            var category_data = [category_root_link, category_link, "{{category_info.category_difficulty}}", skill_value, "{{skill_title}}", "{{solve_count}}"];
            db_category_list.push(category_data)
        {{/each}}

        return db_category_list;
    }

    function showCategoriesSkillDTSearchTable(){
        var dt_list = getCategorySkillList();
        
        $("#categorySkillListTable").dataTable({
            "aaData": dt_list,
            paging: true,
            destroy: true,
            scrollY: '700px',
            scrollCollapse: true
        });
    }

    function findRootCategoriesSkill(){
        var category_list = [];

        {{#each root_category_skill_list}}
            var data = {
                'label': "{{category_info.category_title}}",
                'y': {{skill_value}}
            }
            console.log(data)
            category_list.push(data)
        {{/each}}

        return category_list;
    }

    function generate_skill_table(){
        var data_list = []
        var header_list = []
        header_list.push('Topics')
        header_list.push('Skill')
        data_list.push(header_list)

        {{#each root_category_skill_list}}
            var skill_value_str = "{{skill_value}}"
            var skill_value = parseFloat(skill_value_str)
            data_list.push(["{{category_info.category_title}}", skill_value])
        {{/each}}

        return data_list;
    }

    function show_topic_wise_skill(){
        google.charts.load('current', {'packages':['bar']});
        google.charts.setOnLoadCallback(drawChart);
        var data_list = generate_skill_table();

        function drawChart() {
            var data = google.visualization.arrayToDataTable(data_list);
            var options = {
                bars: 'horizontal', // Required for Material Bar Charts.
                hAxis: {format: 'decimal'},
                colors: ['#5085A5'],
                cssClassNames: {
                    headerRow: 'someclass',
                    tableRow: 'someclass',
                    oddTableRow: 'someclass',
                    selectedTableRow: 'someclass',
                    hoverTableRow: 'someclass',
                    headerCell: 'someclass',
                    tableCell: 'someclass',
                    rowNumberCell: 'someclass'
                }
            };

            var chart = new google.charts.Bar(document.getElementById('skillComparisonChart'));
            chart.draw(data, google.charts.Bar.convertOptions(options));
            var className = 'google-visualization-table-table';
            tableClassHack();
            btns.onclick = function (e) {
                if (e.target.tagName === 'BUTTON') {
                    options.hAxis.format = e.target.id === 'none' ? '' : e.target.id;
                    chart.draw(data, google.charts.Bar.convertOptions(options));
                    tableClassHack();
                }
            }
            tableClassHack();
        }
    }


    function generate_solve_count_table(){
        var data_list = []
        var header_list = []
        header_list.push('Topics')
        header_list.push('overall')
        data_list.push(header_list)
        {{#each root_category_skill_list}}
            var solve_count_str = "{{solve_count}}"
            var solve_count = parseFloat(solve_count_str)
            data_list.push(["{{category_info.category_title}}", solve_count])
        {{/each}}
        return data_list;
    }

    function show_topic_wise_solve_count(){
        google.charts.load('current', {'packages':['bar']});
        google.charts.setOnLoadCallback(drawChart);
        var data_list = generate_solve_count_table();

        function drawChart() {
            var data = google.visualization.arrayToDataTable(data_list);
            var options = {
                bars: 'vertical', // Required for Material Bar Charts.
                hAxis: {format: 'decimal'},
                colors: ['#687864']
            };

            var chart = new google.charts.Bar(document.getElementById('solveCountComparisonChart'));
            chart.draw(data, google.charts.Bar.convertOptions(options));
            tableClassHack();
            var btns = document.getElementById('btn-group');
            btns.onclick = function (e) {
                if (e.target.tagName === 'BUTTON') {
                    options.hAxis.format = e.target.id === 'none' ? '' : e.target.id;
                    chart.draw(data, google.charts.Bar.convertOptions(options));
                    tableClassHack();
                }
            }
            tableClassHack();
        }
    }
    {{#if category-skill}}
        show_topic_wise_skill()
        showCategoriesSkillDTSearchTable();
        show_topic_wise_solve_count();
    {{/if}}

</script>