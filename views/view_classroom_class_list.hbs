<head>
	<link rel="stylesheet" type="text/css" href="/css/main.css">
	<link rel="stylesheet" type="text/css" href="/css/individual_training.css">
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
</head>


<div class="cfs-table-wrapper-1" style="width: 100%%;  margin-right:1px auto">
    <div class="cfs-title-1">
        <h5 style="text-align: center;"><b><a href = "/classroom/training/{{id}}/contest/" style="color: #3d87b9; font-weight:700;">{{team_name}}</a> - Class List</b></h5>
    </div>
    {{#if class_list}}
    <table class="table">
        <thead>
            <tr>
                <th style="width: 15%;">Class Title</th>
                <th style="width: 20%;">Details</th>
                <th>Moderator</th>
                <th>Class Time</th>
                <th>Duration</th>
                <th style="width: 20%;">Resources</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each class_list}}
            <tr>
                <td>{{class_title}}</td>
                <td>{{class_description}}</td>
                <td><a href = "/profile/{{class_moderator_id_user_handle}}/" style="color: {{class_moderator_skill_color}}; font-weight:700;">{{class_moderator_id_user_handle}}</a></td>
                <td>{{class_time}}</td>
                <td>{{class_duration}}</td>
                <td>{{resource_link}}</td>
                <td>
                    <a href="/classroom/class/update/{{id}}/" title="Update" data-toggle="tooltip" style="color: #5bc0de;"><i class="fas fa-edit"></i></a>
                    <a href="/classroom/class/delete/{{id}}/" title="Delete" data-toggle="tooltip" style="color: rgb(180, 88, 1);"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
                {{/each}}

        </tbody>
    </table>
    {{else}}
        <h6 style="text-align: center; padding: 20px;">No class has been added yet.</h6>
    {{/if}}
</div>