<head>
	<link rel="stylesheet" type="text/css" href="/css/main.css">
	<link rel="stylesheet" type="text/css" href="/css/individual_training.css">
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
</head>


<div class="table-wrapper" style="width: 100%%;  margin-right:1px auto">
    <div class="table-title">
        <h4 style="text-align: center;"><b>All Class List [Classroom: <a href = "/classroom/training/{{id}}/" style="color: #3348a7; font-weight:700;">{{team_name}}</a>]</b></h4>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th style="width: 15%;">Class Title</th>
                <th style="width: 20%;">Details</th>
                <th>Moderator</th>
                <th>Class Time</th>
                <th>Duration</th>
                <th style="width: 20%;">Resources</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each class_list}}
            <tr>
                <td>{{class_title}}</td>
                <td>{{class_description}}</td>
                <td><a href = "/profile/{{class_moderator_id_user_handle}}/" style="color: {{class_moderator_skill_color}}; font-weight:700;">{{class_moderator_id_user_handle}}</a></td>
                <td>{{class_time}}</td>
                <td>{{class_duration}}</td>
                <td>{{resource_link}}</td>
                <td>
                    <a href="/classroom/class/update/{{id}}/" title="Update" data-toggle="tooltip" style="color: #5bbbd3;"><i class="fas fa-edit"></i></a>
                    <a href="/classroom/class/delete/{{id}}/" title="Delete" data-toggle="tooltip" style="color: rgb(255, 124, 2);"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
                {{/each}}

        </tbody>
    </table>
    <div class="add-task">
        <div>
            <a style="background-color: #8FC1e3;" title="Add new class" class='btn' href="/classroom/class/add/{{id}}/"><i class="fas fa-plus"></i></a>
        </div>
    </div>
</div>