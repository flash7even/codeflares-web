<head>
	<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
	<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" rel="stylesheet">
	<link rel="stylesheet" type="text/css" href="/css/main.css">
	<link rel="stylesheet" type="text/css" href="/css/user_profile.css">
</head>


<div class="blog-post-1" style="margin-top: 15px;">
    <div class="row">
        <div class="col-md-8">
            <div class="post-header">
                <h2 style="color: rgb(16, 133, 148);" class="media-heading"><b>{{skill_title}}</b></h2>
                <h3 style="color: rgb(199, 196, 42);"><b>{{username}}</b></h3>
				<h5>User Rating: <span style="color:rgb(3, 164, 182); font-weight: 800;">{{skill_value}}</span></h5>
				<h5>Problem Solved: <span style="color:rgb(13, 98, 155); font-weight: 800;">{{solve_count}}</span></h5>
                <h5>Followers: <span style="color:rgb(110, 134, 64); font-weight: 800;">{{follow_stat.follower_count}}</span></h5>
                <h5>Following: <span style="color:rgb(110, 134, 64); font-weight: 800;">{{follow_stat.following_count}}</span></h5>
				<h5>Full Name: {{full_name}}</h5>
				<h5>Email: {{email}}</h5>
                <h5>Registered Since: {{created_at}}</h5>
            </div>
			<br>

			<div class="row" style="text-align: center; padding: 10px;">
				{{#if following}}
					<div class="col-md-2">
						<a href="/unfollow/{{id}}/" style="background-color: rgb(202, 216, 176);" class="btn btn-block"> <span title="Unfollow" class="fas fa-user-minus"></span></a>
					</div>
				{{/if}}
				{{#if unfollowing}}
					<div class="col-md-2">
						<a href="/follow/{{id}}/" style="background-color: rgb(202, 216, 176);" class="btn btn-block"><span title="Follow" class="fas fa-user-plus"></span></a>
					</div>
				{{/if}}
				<div class="col-md-2">
					<a href="/user/sync/{{id}}/" style="background-color: rgb(169, 213, 221);" class="btn btn-block"><span title="Sync Profile" class="fas fa-sync"></span></a>
				</div>
				{{#if own_profile}}
				<div class="col-md-2">
					<a href="/update/profile/" style="background-color: rgb(163, 201, 233);" class="btn btn-block"><span title="Update Profile" class="fas fa-user-edit"></span></a>
				</div>
				{{/if}}
			</div>
        </div>
        <div class="col-md-4">
			<br>
			<br>
			<br>
			<br>
			<div class="image-wrapper">
				<img src="/img/profile.png" alt="image" height="200" width="200">
			</div>
        </div>
    </div>
</div>

<br>

<div class="table-type-1">
    <div class="table-title-2">
        <h3 style="text-align: center;"><b>CodeTrainer Rating History</b></h3>
    </div>
    <br>
	<div id="rating_chart" style="height: 400px; width: 100%;"></div>
</div>

<script>

	//------ CodeTrainer TEAM RATING HISTORY CHART -------//
	function show_rating_history(){
		google.charts.load('current', {'packages':['line']});
		google.charts.setOnLoadCallback(drawChart);

		function drawChart() {
			var data = new google.visualization.DataTable();

			data.addColumn('date', 'Year');
			data.addColumn('number', "Rating");

			var rating_data_list = []
			{{#each rating_history}}
				var rating_data = []
				rating_data.push(new Date({{date.year}}, {{date.month}}, {{date.day}}));
				rating_data.push({{rating}})
				rating_data_list.push(rating_data)
			{{/each}}

			data.addRows(rating_data_list);

			var options = {
				chart: {
					title: ''
				},
			};

		var chart = new google.charts.Line(document.getElementById('rating_chart'));
		chart.draw(data, google.charts.Line.convertOptions(options));
		}
	}
	//------ CodeTrainer TEAM RATING HISTORY ENDS -------//

	show_rating_history();
</script>