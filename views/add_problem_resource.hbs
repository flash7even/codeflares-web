<head>
	<link rel="stylesheet" type="text/css" href="/css/main.css">
</head>

<div class="form-type-1">	
    <form action="/problem/resource/add/{{id}}/" method="post">
        <div class="table-title-2">
            <h2 style="text-align: center;"><b>Add Problem Resource</b></h2>
			<h6 style="text-align: center; color: #0e586e;"><b>Problem: {{problem_name}}</b></h6>
        </div>
		<br>
		<div class="form-row">
			<div class="form-group col-md-12">
				<div class="input-group">
					<input type="text" id="resource_title" class="form-control" name="resource_title" placeholder="Resource Name" required>
				</div>
			</div>
		</div>
		<div class="form-row">
			<div class="form-group col-md-12">
				<div class="input-group">
					<input type="text" id="resource_body" class="form-control" name="resource_body" placeholder="Resource Details">
				</div>
			</div>
		</div>
		<div class="form-row">
			<div class="form-group col-md-12">
				<div class="input-group">
					<input type="text" title="resource_type" id="resource_type" class="form-control" name="resource_type" placeholder="Resource Type">
				</div>
			</div>
		</div>
		<div class="form-row">
			<div class="form-group col-md-12">
				<div class="input-group">
					<input type="text" id="resource_owner" class="form-control" name="resource_owner" placeholder="Resource Credit">
				</div>
			</div>
		</div>
		<div class="form-group">
            <button type="submit" class="btn submit-btn btn-primary btn-block btn-lg">Add Resource</button>
        </div>
	</form>
</div>
