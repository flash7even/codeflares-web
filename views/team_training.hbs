        </div>
    </div>

    <hr class="light">

    <div class="row page-box">
        <div class="col-md-2">
        </div>
        <div class="col-md-2">
            {{#if training-plan}}
            <b>
            <a title="Home" href="/training/team/{{id}}/training-plan/"><i class="fas fa-tenge"></i> Training Plan</a>
            <hr style="border: 1px solid #2b3847; border-radius: 1px;">
            </b>
            {{else}}
            <b>
            <a title="Home" href="/training/team/{{id}}/training-plan/"><i class="fas fa-tenge"></i> Training Plan</a>
            <hr style="border: 1px solid #c5c5c5; border-radius: 1px;">
            </b>
            {{/if}}
        </div>
        <div class="col-md-2">
            {{#if category-skill}}
            <b>
            <a title="Member Skills" href="/training/team/{{id}}/category-skill/"><i class="fas fa-chart-bar"></i> Category Skills</a>
            <hr style="border: 1px solid #2b3847; border-radius: 1px;">
            </b>
            {{else}}
            <b>
            <a title="Member Skills" href="/training/team/{{id}}/category-skill/"><i class="fas fa-chart-bar"></i> Category Skills</a>
            <hr style="border: 1px solid #c5c5c5; border-radius: 1px;">
            </b>
            {{/if}}
        </div>
        <div class="col-md-2">
            {{#if contest}}
            <a href="/training/team/{{id}}/contest/"><i class="fas fa-cubes"></i> Contest</a>
            <hr style="border: 1px solid #2b3847; border-radius: 1px;">
            {{else}}
            <a href="/training/team/{{id}}/contest/"><i class="fas fa-cubes"></i> Contest</a>
            <hr style="border: 1px solid #c5c5c5; border-radius: 1px;">
            {{/if}}
        </div>
        <div class="col-md-2">
            {{#if rating-comparison}}
            <a href="/training/team/{{id}}/rating-comparison/"><i class="fas fa-cubes"></i> Rating Comparison</a>
            <hr style="border: 1px solid #2b3847; border-radius: 1px;">
            {{else}}
            <a href="/training/team/{{id}}/rating-comparison/"><i class="fas fa-cubes"></i> Rating Comparison</a>
            <hr style="border: 1px solid #c5c5c5; border-radius: 1px;">
            {{/if}}
        </div>
        <div class="col-md-2">
        </div>
    </div>

</div>

{{#if training-plan}}
<div class="cfs-table-wrapper-1" style="width: 100%%;  margin-right:1px auto">			
    <div class="cfs-title-1">
        <h6 style="text-align: center;">Next Problems To Solve</h6>
    </div>
    <table class="table" style="text-align: center;">
        <thead>
            <tr>
                <th>#</th>
                <th style="width: 30%;">Problem Name</th>
                <th>Source</th>
                <th>Relevant Score</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>

            {{#each problem_stat}}
            <tr>
                <td style="color: #2b3a47;"><b>{{rank}}</b></td>
                <td><a href = "/problem/view/{{problem_info.id}}/" style="color: #0061a1; font-weight:500; text-decoration: underline;">{{problem_info.problem_name}}</a></td>
                <td><a style="color: #3d87b9;" href="{{problem_info.source_link}}"><i class="fas fa-external-link-alt"></i></a></td>
                <td>{{relevant_score}}</td>
                <td>
                    <a style="color: rgb(155, 134, 18);" href="#" class="edit" title="Flag for 3 days" data-toggle="tooltip"><i class="fas fa-eye-slash"></i></a>
                    <a style="color: rgb(180, 88, 1);" href="#" class="delete" title="Delete from my list" data-toggle="tooltip"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
                {{/each}}

        </tbody>
    </table>
</div>

<div class="cfs-table-wrapper-1" style="width: 100%%;  margin-right:1px auto">
    <div class="cfs-title-1">
        <h6 style="text-align: center;">Next Algorithms To Learn</h6>
    </div>
    <table class="table" style="text-align: center; width: 100%; table-layout: fixed;">
        <thead>
            <tr>
                <th>#</th>
                <th>Algorithm Name</th>
                <th>Algorithm Skill</th>
                <th>Difficulty</th>
                <th>Relevant Score</th>
            </tr>
        </thead>
        <tbody>

            {{#each category_stat}}
            <tr>
                <td style="color: #2b3a47;"><b>{{rank}}</b></td>
                <td><a href = "/category/view/{{category_info.category_id}}/" style="color: #0061a1; font-weight:500; text-decoration: underline;">{{category_info.category_title}}</a></td>
                <td>{{skill_value}}</td>
                <td>{{category_info.category_difficulty}}</td>
                <td>{{relevant_score}}</td>
            </tr>
            {{/each}}

