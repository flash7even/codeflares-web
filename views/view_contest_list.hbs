<head>
	<link rel="stylesheet" type="text/css" href="/css/main.css">
	<link rel="stylesheet" type="text/css" href="/css/individual_training.css">
</head>

<div class="contest-table" style="width: 100%; font-weight:500; margin-right:1px auto">
    <div class="table-title">
        <h6 style="text-align: center;"><b>Training Contest List</b></h6>
    </div>
    <br>
    <br>

    <ul style="width: 97%;">
        {{#each contest_list}}
            <a href="/">
            <li class="contest-row">
                <div class="row">
                    <div class="col-md-4" style="padding-top: 10px;">
                        <a href = "/contest/view/{{id}}/" style="color: #0061a1; font-weight:700;">{{contest_name}}</a>
                    </div>
                    <div class="col-md-1" style="padding-top: 10px;">
                        <div class = "display: flex; align-items: center; justify-content: center;">
                        <a href = "/profile/{{setter_handle}}/" style="color: {{setter_skill_color}}; font-weight:700;">{{setter_handle}}</a>
                        </div>
                    </div>
                    <div class="col-md-1" style="padding-top: 10px;">
                        <h6>Level {{contest_level}}</h6>
                    </div>
                    <div class="col-md-2" style="padding-top: 10px;">
                        <h6 style="font-size: 14px;">{{start_date}} - {{end_date}}</h6>
                    </div>
                    <div class="col-md-2">
                        <button type="button" class="btn btn-light">View Problems</button>
                    </div>
                    <div class="col-md-2">
                        <button type="button" class="btn btn-light">Standings</button>
                    </div>
                </div>
            </li>
            </a>
            <br>
        {{/each}}
    </ul>
</div>
