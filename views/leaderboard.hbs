<head>
	<link rel="stylesheet" type="text/css" href="/css/main.css">
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
</head>


<div class="table-type-1" style="margin-top:15px; margin-left: 0px;">
    <div class="table-title-2">
        <h4 style="text-align: center;"><b>Leaderboard</b></h4>
    </div>
    <table id="topRatedMemberTable" class="table table-striped table-bordered" style="text-align: center;">
        <thead style="background-color: #accbe1;">
            <tr>
                <th>Rank</th>
                <th>User</th>
                <th>Skill Value</th>
                <th>Solve Count</th>
            </tr>
        </thead>
        <tbody>

        </tbody>
    </table>
</div>


<script type="text/javascript">

    function getTopRatedList(){
        var dt_list = [];
        {{#each top_rated_users}}
            var user_link = '<a href = "/profile/{{username}}/" style="color: #5bc0de; font-weight:700;">{{username}}</a>'
            var data = ["{{rank}}", user_link, "{{skill_value}}" , "{{solve_count}}"];
            dt_list.push(data)
        {{/each}}

        return dt_list;
    }

    function showTopRatedMemberDTSearchTable(){
        var dt_list = getTopRatedList();
        
        $("#topRatedMemberTable").dataTable({
            "aaData": dt_list,
            paging: true,
            destroy: true,
            scrollCollapse: true,
            responsive: true,
            pageLength: 50
        });
    }

    $(document).ready( function () {
        showTopRatedMemberDTSearchTable();
    } );

</script>
